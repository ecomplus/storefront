<% if (Array.isArray(opt.slides) && opt.slides.length) { %>
  <div class="banner-slider" data-cms-if="home.slider">
    <div class="glide" data-autoplay="<%= opt.autoplay %>">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides banner-slider__slides">
          <% for (let i = 0; i < opt.slides.length; i++) { %>
            <li class="glide__slide">
              <%- await include('/@/sections/banner', { _, opt: opt.slides[i] }) %>
            </li>
          <% } %>
        </ul>

        <% if (opt.slides.length > 1) { %>
          <div class="glide__arrows d-none d-md-block" data-glide-el="controls">
            <button
              class="btn glide__arrow glide__arrow--left"
              data-glide-dir="<"
              aria-label="<%= _.dictionary('previous') %>"
            >
              <i class="fas fa-chevron-left"></i>
            </button>
            <button
              class="btn glide__arrow glide__arrow--right"
              data-glide-dir=">"
              aria-label="<%= _.dictionary('next') %>"
            >
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>

          <div class="glide__bullets" data-glide-el="controls[nav]">
            <% opt.slides.forEach((_, index) => { %>
              <button
                class="glide__bullet"
                data-glide-dir="=<%= index %>"
                aria-label="<%= `${index}Â° _.dictionary('banner')` %>"
              ></button>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
<% } %>
