{
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "node",
        "vue",
        "vue-template-compiler",
        "core-js",
        "lozad"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
