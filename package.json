{
  "name": "@ecomplus/storefront-template",
  "version": "0.3.0",
  "description": "Reusable & upgradable views and scripts for E-Com Plus storefront",
  "main": "template/js/index.js",
  "jsdelivr": "dist/storefront.js",
  "unpkg": "dist/storefront.js",
  "bin": {
    "storefront-template": "./scripts/install.js",
    "storefront-template-copy": "./scripts/copy.js",
    "storefront-template-styles": "./scripts/styles.js"
  },
  "scripts": {
    "styles": "node ./scripts/styles.js",
    "pack": "npm run styles && storefront-pack",
    "serve": "npm run pack serve",
    "build": "ECOMCLIENT_NOTIMEOUT=true WEBPACK_BUILD_DEV=true npm run pack build",
    "build:site": "ECOMCLIENT_NOTIMEOUT=true npm run pack build",
    "build:lib": "NODE_ENV=production webpack",
    "release": "npm run build && standard-version",
    "test:install": "rm -rf ./copy && mkdir ./copy && TEMPLATE_DIR=copy node ./scripts/install.js",
    "test:copy": "rm -rf ./copy && node ./scripts/copy.js --dest=copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront-template.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "pwa-ecommerce",
    "ejs-template",
    "store-theme",
    "ecommerce-template",
    "ecommerce-theme"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront-template/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront-template#readme",
  "dependencies": {
    "@ecomplus/client": "^1.1.2",
    "@ecomplus/storefront-twbs": "^3.4.0",
    "@ecomplus/utils": "^1.0.1",
    "@ecomplus/widget-user": "^0.6.9",
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-brands-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@glidejs/glide": "^3.3.0",
    "bootswatch": "^4.3.1",
    "core-js": "^3.2.1",
    "eventemitter3": "^4.0.0",
    "lozad": "^1.9.0",
    "slideout": "^1.0.1",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@ecomplus/search-engine": "^1.0.2",
    "@ecomplus/storefront-framework": "^5.1.0",
    "babel-eslint": "^10.0.3",
    "ejs": "^2.6.2",
    "husky": "^3.0.4",
    "standard": "^13.1.0",
    "standard-version": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "last 1 version",
    "not dead",
    "> 0.2%"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
