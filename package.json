{
  "name": "@ecomplus/storefront-template",
  "version": "1.27.0",
  "description": "Reusable & upgradable views and scripts for E-Com Plus storefront",
  "main": "template/js/index.js",
  "jsdelivr": "dist/storefront.js",
  "unpkg": "dist/storefront.js",
  "bin": {
    "storefront-tmpl": "./scripts/install.js",
    "storefront-tmpl-copy": "./scripts/copy.js",
    "storefront-tmpl-styles": "./scripts/styles.js"
  },
  "scripts": {
    "pack": "node ./scripts/install.js && node ./scripts/styles.js && storefront-pack",
    "serve": "npm run pack serve",
    "build": "ECOMCLIENT_NOTIMEOUT=true WEBPACK_BUILD_DEV=true npm run pack build",
    "build:site": "ECOMCLIENT_NOTIMEOUT=true npm run pack build",
    "build:lib": "NODE_ENV=production webpack",
    "release": "npm ddp && npm run build && standard-version && npm run snapshot",
    "snapshot": "cp ./dist.package.json ./dist/package.json; cp ./webpack.externals.js ./dist/",
    "test:install": "rm -rf ./copy && mkdir ./copy && TEMPLATE_DIR=copy node ./scripts/install.js",
    "test:copy": "rm -rf ./copy && node ./scripts/copy.js --dest=copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront-template.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "pwa-ecommerce",
    "ejs-template",
    "store-theme",
    "ecommerce-template",
    "ecommerce-theme"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront-template/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront-template#readme",
  "peerDependencies": {
    "core-js": "3.x",
    "ejs": "3.x"
  },
  "dependencies": {
    "@ecomplus/client": "^2.0.2",
    "@ecomplus/passport-client": "^1.0.5",
    "@ecomplus/search-engine": "^2.0.2",
    "@ecomplus/shopping-cart": "^2.0.2",
    "@ecomplus/storefront-app": "^1.4.10",
    "@ecomplus/storefront-framework": "^5.3.3",
    "@ecomplus/storefront-twbs": "^4.0.6",
    "@ecomplus/utils": "^1.2.8",
    "@ecomplus/widget-minicart": "^0.7.3",
    "@ecomplus/widget-product": "^0.4.2",
    "@ecomplus/widget-product-card": "^0.3.1",
    "@ecomplus/widget-search": "^0.6.0",
    "@ecomplus/widget-search-engine": "^0.3.0",
    "@ecomplus/widget-tag-manager": "^1.1.2",
    "@ecomplus/widget-trustvox": "^1.0.0",
    "@ecomplus/widget-user": "^0.10.4",
    "@glidejs/glide": "^3.4.1",
    "bootswatch": "^4.4.1",
    "eventemitter3": "^4.0.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lozad": "^1.14.0",
    "photoswipe": "^4.1.3",
    "slideout": "^1.0.1",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.0.3",
    "husky": "^4.0.3",
    "standard": "^14.3.1",
    "standard-version": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "> 0.5%",
    "not dead",
    "not ie 11",
    "not ie_mob 11"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
